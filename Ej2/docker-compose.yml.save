version: '2'


services:
  bookmedik:
    container_name: bookmedik
    image: crespillo/bookmedik:v1
    restart: always
    environment:
      USER: bookmedik
      PASSWD: bookmedik
      HOST: mariadb
      DATABASE: bookmedik
    links:
      - db
    ports:
      - 8080:80
    depends_on:
      - mariadb

  mariadb:
    container_name: mariadb
    image: mariadb
    restart: always
    environment:
      MARIADB_ROOT_PASSWORD: root
      MARIADB_DATABASE: bookmedik
      MARIADB_USER: bookmedik
      MARIADB_PASSWORD: bookmedik
    volumes:
      - dbsudo docker:/var/lib/mysql

volumes:
    db:
